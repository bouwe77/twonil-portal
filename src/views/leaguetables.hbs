      <div class="cl-mcont">

        <div class="row">
          <div class="col-sm-6 col-md-6">

<div class="tab-container">
                <ul class="nav nav-tabs">
{{#with _embedded}} {{#with rel:leaguetables}} {{#each this}}
{{#if (eq competition-name ../../../current-competition-name)}}
                    <li class="active">
{{else}}
                    <li>
{{/if}}                      
                      <a href="#tab-{{removeSpaces (toLowerCase competition-name)}}" data-toggle="tab">{{competition-name}}</a></li>
{{/each}}{{/with}}{{/with}}
                </ul>
                <div class="tab-content">
{{#with _embedded}} {{#with rel:leaguetables}} {{#each this}}
{{#if (eq competition-name ../../../current-competition-name)}}
                  <div id="tab-{{removeSpaces (toLowerCase competition-name)}}" class="tab-pane active cont">
{{else}}
                  <div id="tab-{{removeSpaces (toLowerCase competition-name)}}" class="tab-pane cont">
